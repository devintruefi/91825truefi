# TRUEFIBACKEND Environment Variables

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=truefi
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSLMODE=require

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# GPT-5 Unified System (Primary)
USE_GPT5_UNIFIED=true
ADVANCED_MODEL=gpt-5
GPT5_REASONING_EFFORT=medium
GPT5_VERBOSITY=medium
GPT5_TIMEOUT_SECONDS=300
MODELING_INCLUDE_FULL_PROFILE_JSON=true
PROFILE_JSON_MAX_CHARS=120000
MEMORY_ENABLED=false

# Agent Configuration
MAX_SQL_REVISIONS=1
MAX_MODEL_REVISIONS=1
MAX_SQL_ROWS=1000
PROFILE_PACK_CACHE_MINUTES=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=agent_execution.log
LOG_TO_DB=true

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ALLOWED_ORIGINS=http://localhost:3000,https://truefi.ai

# Legacy Environment Variables (for backward compatibility)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/truefi
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
